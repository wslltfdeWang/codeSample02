@import "../../../common/lib/weui.wxss";

label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}

form{
  width: 100%;
}

.picker-text {
  margin-left: 20rpx;
  position: relative;
}

.banner {
    width: 100%;
    height: 364rpx;
    background-size: cover;
    margin-top:-69rpx;
}

.selection-wrapper {
    width: 670rpx;
    margin: 5rpx auto 0 auto;
    font-size: 0;
}

.selection {
    position: relative;
    display: inline-block;
    width: 670rpx;
    height: 450rpx;
    background: #FAFAFA;
    margin-bottom: 32rpx;
    box-shadow: 0 8rpx 24rpx 0 rgba(0,0,0,0.05);
    border-radius: 21rpx;
}

.selection-hover {
    background-color: #f8f8f8;
}

.selection::after {
    content: '';
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    background-size: cover;
    top: 62rpx;
    left: 598rpx;
}

.selection ._img {
    position: absolute;
    width: 144rpx;
    height: 144rpx;
    left: 40rpx;
    top: 28rpx;
}

.selection-txt {
    position: absolute;
    top: 72rpx;
    left: 254rpx;
    text-align: left;
}

.status {
    color: #333;
    font-size: 36rpx;
    line-height: 50rpx;
    font-weight: 600;
}

.desc {
    color: #999;
    font-size: 24rpx;
    line-height: 34rpx;
    margin-top: 4rpx;
}

.selection ._imgarrow {
    position:absolute;
	width:36rpx;
	height:36rpx;
	right:40rpx;
	top:76rpx;
}

.section-add {
    display: flex;
    height: 84rpx;
    line-height: 84rpx;
    border-bottom: 2rpx solid #eee;
    overflow: hidden;
    text-overflow: ellipsis;
}
.section-add .section {
    height: 84rpx;
    line-height: 84rpx;
    border-bottom: 2rpx solid #eee;
    overflow: hidden;
    text-overflow: ellipsis;
}

.section-add .section .title {
    width: 200rpx;
    float: left;
    color: #222;
}

.section-add .content {
    width: 350rpx;
    float: right;
    height: 84rpx;
    line-height: 84rpx;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.section-add .button {
    float: right;
    height: 84rpx;
    line-height: 84rpx;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.tip {
    width: 100%;
    height: 100rpx;
}

.tips {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 25rpx;
}